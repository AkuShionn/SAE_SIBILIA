<UserControl x:Class="SAE_SIBILIA.UserControls.SuiviCommande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             mc:Ignorable="d" 
             Height="598" Width="400" Background="White">
    <Grid Margin="20">
        <TabControl x:Name="TabCommandes">
            <!-- Onglet À récupérer -->
            <TabItem Header="À récupérer">
                <DataGrid x:Name="dgARecuperer" AutoGenerateColumns="False" HeadersVisibility="Column" Margin="0,10"
                          CanUserAddRows="False" IsReadOnly="True" RowHeight="40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Commande" Binding="{Binding NumCommande}" Width="100"/>
                        <DataGridTextColumn Header="Client" Binding="{Binding Client}" Width="200"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0}€}" Width="100"/>

                        <!-- Colonne Statut avec badge -->
                        <DataGridTemplateColumn Header="Statut" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Payee, Converter={StaticResource StatutColorConverter}}"
                                            Padding="5" CornerRadius="10">
                                        <TextBlock Text="{Binding Payee, Converter={StaticResource StatutTextConverter}}" 
                                                   Foreground="Black" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Colonne Action -->
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="👁 Voir" Foreground="Blue" Background="Transparent"
                                            BorderThickness="0" Cursor="Hand" Click="VoirCommande_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Onglet Récupérées -->
            <TabItem Header="Récupérées">
                <DataGrid x:Name="dgRecuperees" AutoGenerateColumns="False" HeadersVisibility="Column" Margin="0,10"
                          CanUserAddRows="False" IsReadOnly="True" RowHeight="40">
                    <!-- Réutilise les mêmes colonnes que ci-dessus -->
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                        <DataGridTextColumn Header="Client" Binding="{Binding Client}" Width="200"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0}€}" Width="100"/>
                        <DataGridTemplateColumn Header="Statut" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Payee, Converter={StaticResource StatutColorConverter}}"
                                            Padding="5" CornerRadius="10">
                                        <TextBlock Text="{Binding Payee, Converter={StaticResource StatutTextConverter}}" 
                                                   Foreground="Black" FontWeight="Bold" HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="👁 Voir" Foreground="Blue" Background="Transparent"
                                            BorderThickness="0" Cursor="Hand" Click="VoirCommande_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
