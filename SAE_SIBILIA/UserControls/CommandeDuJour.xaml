<UserControl
    x:Class="SAE_SIBILIA.UserControls.CommandeDuJour"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="#F7F8FC"
    mc:Ignorable="d">

    <UserControl.Resources>

        <SolidColorBrush x:Key="HeaderBackgroundColor" Color="#2D3748" />
        <SolidColorBrush x:Key="HeaderForegroundColor" Color="White" />
        <SolidColorBrush x:Key="RowHoverBackgroundColor" Color="#E2E8F0" />
        <SolidColorBrush x:Key="RowAlternatingBackgroundColor" Color="#FFFFFF" />
        <SolidColorBrush x:Key="GridLinesColor" Color="#E2E8F0" />

        <Style x:Key="ModernDataGridHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource HeaderBackgroundColor}" />
            <Setter Property="Foreground" Value="{StaticResource HeaderForegroundColor}" />
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="BorderThickness" Value="0,0,1,0" />
            <Setter Property="BorderBrush" Value="{StaticResource GridLinesColor}" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
        </Style>

        <Style x:Key="ModernDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="15,10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Retiree}" Value="True">
                    <Setter Property="TextBlock.TextDecorations" Value="Strikethrough" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernDataGridRow" TargetType="DataGridRow">
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource RowHoverBackgroundColor}" />
                </Trigger>
                <DataTrigger Binding="{Binding Retiree}" Value="True">
                    <Setter Property="Foreground" Value="Gray" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,25"
            FontSize="26"
            FontWeight="Bold"
            Foreground="#0D1F3C"
            Text="📅 Commandes à récupérer aujourd'hui" />

        <StackPanel
            Grid.Row="1"
            Margin="0,0,0,15"
            Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                Content="Filtrer par nom de client :"
                FontSize="14" />
            <TextBox
                x:Name="txtFiltreClient"
                Width="220"
                Margin="5,0"
                Padding="8,6"
                VerticalAlignment="Center"
                FontSize="14" />
            <CheckBox
                x:Name="chkMasquerRecuperees"
                Margin="25,0,0,0"
                VerticalAlignment="Center"
                Content="Masquer les commandes retirées"
                FontSize="14"
                IsChecked="True" />

            <!--  ✅ Bouton Historique déplacé ici  -->
            <Button
                x:Name="btnHistoriqueCommandes"
                Margin="25,0,0,0"
                Padding="10,6"
                VerticalAlignment="Center"
                Background="#3182CE"
                BorderThickness="0"
                Click="btnHistoriqueCommandes_Click"
                Content="🕓 Historique"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>

        <Border
            Grid.Row="2"
            Background="White"
            BorderBrush="{StaticResource GridLinesColor}"
            BorderThickness="1"
            ClipToBounds="True"
            CornerRadius="8">
            <DataGrid
                x:Name="dataGridCommandes"
                AlternatingRowBackground="{StaticResource RowAlternatingBackgroundColor}"
                AutoGenerateColumns="False"
                Background="Transparent"
                BorderThickness="0"
                CanUserAddRows="False"
                CellStyle="{StaticResource ModernDataGridCell}"
                ColumnHeaderStyle="{StaticResource ModernDataGridHeader}"
                GridLinesVisibility="Horizontal"
                HorizontalGridLinesBrush="{StaticResource GridLinesColor}"
                IsReadOnly="True"
                RowStyle="{StaticResource ModernDataGridRow}"
                SelectionMode="Single">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="Auto"
                        Binding="{Binding NumCommande}"
                        Header="Numéro" />
                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding NomClient}"
                        Header="Client" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding HeureRetrait}"
                        Header="Heure de retrait" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrixTotal, StringFormat={}{0:C}}"
                        Header="Total" />

                    <DataGridTemplateColumn Width="*" Header="Statut">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border
                                    Padding="8,4"
                                    HorizontalAlignment="Left"
                                    CornerRadius="10">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{Binding Statut}" />
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Retiree}" Value="False">
                                                    <Setter Property="Background" Value="#FFFBEB" />
                                                    <Setter Property="TextBlock.Foreground" Value="#92400E" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Retiree}" Value="True">
                                                    <Setter Property="Background" Value="#F0FFF4" />
                                                    <Setter Property="TextBlock.Foreground" Value="#22543D" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel
            Grid.Row="3"
            Margin="0,15,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="btnMarquerRecuperee"
                Padding="12,8"
                Background="#2F855A"
                BorderThickness="0"
                Content="✔️ Marquer comme Retirée"
                Cursor="Hand"
                FontWeight="Bold"
                Foreground="White">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
