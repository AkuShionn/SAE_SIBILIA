<UserControl x:Class="SAE_SIBILIA.UserControls.CommandeDuJour"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             mc:Ignorable="d" Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="📅 Commandes à récupérer aujourd'hui" FontSize="24" FontWeight="Bold" Foreground="#0D1F3C" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Filtrer par nom de client :" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFiltreClient" Width="200" VerticalAlignment="Center" Margin="5,0"/>
            <CheckBox x:Name="chkMasquerRecuperees" Content="Masquer les commandes retirées" VerticalAlignment="Center" Margin="20,0,0,0" IsChecked="True"/>
        </StackPanel>

        <DataGrid x:Name="dataGridCommandes" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False" SelectionMode="Single" AlternatingRowBackground="#f5f5f5">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Retiree}" Value="True">
                            <Setter Property="Background" Value="#e0e0e0"/>
                            <Setter Property="Foreground" Value="Gray"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Numéro" Binding="{Binding NumCommande}" Width="Auto"/>
                <DataGridTextColumn Header="Client" Binding="{Binding NomClient}" Width="2*"/>
                <DataGridTextColumn Header="Heure de retrait" Binding="{Binding HeureRetrait}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding PrixTotal, StringFormat={}{0:C}}" Width="*"/>
                <DataGridTemplateColumn Header="Statut" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Statut}" FontWeight="Bold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Retiree}" Value="False">
                                                <Setter Property="Foreground" Value="OrangeRed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Retiree}" Value="True">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnMarquerRecuperee" Content="✔️ Marquer comme Retirée" Padding="10,5" Background="ForestGreen" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>