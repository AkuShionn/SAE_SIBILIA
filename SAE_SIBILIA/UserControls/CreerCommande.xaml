<UserControl x:Class="SAE_SIBILIA.UserControls.CreerCommande"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             mc:Ignorable="d" 
            Height="600" Width="400" Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock Text="Nouvelle commande" FontSize="20" FontWeight="Bold" Foreground="#0D1F3C" TextAlignment="Center"/>
            <TextBlock Text="Remplissez les informations client et commande" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Infos client -->
                <TextBlock Text="Nom du client" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <TextBox x:Name="txtNomClient" BorderThickness="0" Background="Transparent"/>
                </Border>

                <TextBlock Text="Téléphone" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <TextBox x:Name="txtTelClient" BorderThickness="0" Background="Transparent"/>
                </Border>

                <TextBlock Text="Adresse" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <TextBox x:Name="txtAdresseClient" BorderThickness="0" Background="Transparent"/>
                </Border>

                <!-- Plat -->
                <TextBlock Text="Plat" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <ComboBox x:Name="comboPlats" BorderThickness="0" Background="Transparent"/>
                </Border>

                <!-- Quantité -->
                <TextBlock Text="Quantité" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <TextBox x:Name="txtQuantite" BorderThickness="0" Background="Transparent"/>
                </Border>

                <!-- Date retrait -->
                <TextBlock Text="Date de retrait prévue" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <DatePicker x:Name="dateRetrait" BorderThickness="0" Background="Transparent"/>
                </Border>

                <!-- Ajouter plat -->
                <Button Content="Ajouter à la commande"
                    Background="#D4A857" Foreground="White" FontWeight="Bold"
                    Margin="0,10,0,0" Padding="8" BorderThickness="0" Cursor="Hand"/>

                <!-- Liste des plats ajoutés -->
                <TextBlock Text="Plats dans la commande :" FontSize="12" FontWeight="Bold" Margin="0,10,0,0"/>
                <ListBox x:Name="listPlatsCommandes" Height="100" />

                <!-- Total -->
                <TextBlock x:Name="txtTotal" Text="Total : 0 €" FontSize="14" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Right"/>

                <!-- Bouton de validation -->
                <Button Content="Valider la commande"
                    Background="#0D1F3C" Foreground="#D4A857" FontWeight="Bold"
                    Padding="10" Margin="0,20,0,0" BorderThickness="0" Cursor="Hand"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
      
    </Grid>
</UserControl>
