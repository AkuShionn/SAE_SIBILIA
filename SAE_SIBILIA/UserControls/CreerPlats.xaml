<UserControl x:Class="SAE_SIBILIA.UserControls.CreerPlats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             mc:Ignorable="d" 
            Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock Text="Création d'un plat" FontSize="20" FontWeight="Bold" Foreground="#0D1F3C" Margin="0,10,0,0" TextAlignment="Center"/>
            <TextBlock Text="Remplissez les informations ci-dessous" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1">

            <!-- Nom Plat -->
            <TextBlock Text="Nom du plat" FontSize="12" Foreground="Gray" TextAlignment="Left"/>
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxNomPlat" BorderThickness="0" Background="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Categorie -->
            <TextBlock Text="Categorie" FontSize="12" Foreground="Gray" TextAlignment="Left"/>
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="🗂️" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="comboBox_Categorie" BorderThickness="0" Background="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Sous-categorie -->
            <TextBlock Text="Sous-categorie" FontSize="12" Foreground="Gray" TextAlignment="Left"/>
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="🗂️" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="comboBox_SousCategorie" BorderThickness="0" Background="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Nombre de personnes -->
            <TextBlock Text="Nombre de personnes" FontSize="12" Foreground="Gray" TextAlignment="Left"/>
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxNbPersonnes" BorderThickness="0" Background="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Temps de préparation -->
            <TextBlock Text="Temps de préparation" FontSize="12" Foreground="Gray" TextAlignment="Left"/>
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxTempsPreparation" BorderThickness="0" Background="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Période -->
            <TextBlock Text="Période" FontSize="12" Foreground="Gray" TextAlignment="Left"/>
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxPeriode" BorderThickness="0" Background="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Bouton -->
            <Button x:Name="buttCreerPlat" Content="Créer le plat"
                    Background="#0D1F3C" Foreground="#D4A857" FontWeight="Bold"
                    Padding="10" Margin="0,20,0,0" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Version 2.0.1 © 2023 Sibilla Gestion" FontSize="10" Foreground="Gray" TextAlignment="Center"/>
            <TextBlock Text="Tous droits réservés" FontSize="10" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
