<UserControl x:Class="SAE_SIBILIA.UserControls.GestionPeriode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             mc:Ignorable="d" 
             Height="598" Width="400" Background="White">
    <StackPanel Margin="20">


        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock Text="Gestion des périodes" FontSize="20" FontWeight="Bold" Foreground="#0D1F3C" Margin="0,10,0,0" TextAlignment="Center"/>
            <TextBlock Text="Renseigner les informations de la periode en cours" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>

        <!-- Sélection de la période -->
        <StackPanel Orientation="Vertical" Margin="0,20">
            <TextBlock Text="Date de début :" FontSize="14" Margin="0,5"/>
            <DatePicker x:Name="StartDatePicker" Margin="0,5" Width="200"/>

            <TextBlock Text="Date de fin :" FontSize="14" Margin="0,5"/>
            <DatePicker x:Name="EndDatePicker" Margin="0,5" Width="200"/>
        </StackPanel>

        <!-- Boutons de gestion -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
            <Button Content="Ajouter" Background="#F59E0B" Foreground="White" FontWeight="Bold" Padding="20,10" Margin="10" />
            <Button Content="Modifier" Background="#2196F3" Foreground="White" FontWeight="Bold" Padding="20,10" Margin="10" />
        </StackPanel>


    </StackPanel>
</UserControl>
