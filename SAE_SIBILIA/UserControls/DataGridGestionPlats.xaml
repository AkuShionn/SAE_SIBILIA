<UserControl x:Class="SAE_SIBILIA.UserControls.DataGridGestionPlats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <!-- Conteneur principal -->
        <StackPanel Margin="20">
            <!-- Titre -->
            <TextBlock Text="Gestion des Plats" FontSize="24" FontWeight="Bold" Foreground="#0D1F3C" Margin="0,0,0,20"/>

            <!-- Barre de recherche -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,20">
                <TextBox x:Name="searchBox" Width="250" Height="30" Margin="0,0,10,0" Padding="5" />
                <Button Content="🔍" Background="#1E3A8A" Foreground="White" Width="40" Height="30" BorderBrush="#1E3A8A" BorderThickness="1"/>
            </StackPanel>

            <!-- Bouton Ajouter Plat -->
            <Button Content="+ Ajouter plat" Background="#F59E0B" Foreground="White" FontWeight="Bold" Width="200" Height="40" HorizontalAlignment="Right"  Margin="0,0,0,20"/>

            <!-- DataGrid -->
            <DataGrid x:Name="dgPlats" 
                  ItemsSource="{Binding lesPlats}" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nom" Binding="{Binding NomPlat}" Width="*" />
                    <DataGridTextColumn Header="Prix" Binding="{Binding PrixUnitaire}" Width="*" />
                    <DataGridTextColumn Header="Délai de préparation" Binding="{Binding DelaiPreparation}" Width="*" />
                    <DataGridTextColumn Header="Nb Personnes" Binding="{Binding NbPersonnes}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
