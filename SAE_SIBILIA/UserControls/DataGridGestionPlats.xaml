<UserControl x:Class="SAE_SIBILIA.UserControls.DataGridGestionPlats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Style pour les en-têtes du DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1E3A8A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <!-- Style des boutons modernes -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#1E40AF" Opacity="0.25" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#F59E0B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D97706"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#B45309"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <!-- Conteneur principal -->
        <StackPanel Margin="20">
            <!-- Titre -->
            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#0D1F3C"
                Text="Gestion des Plats" />

            <!-- Barre de recherche et bouton Ajouter Plat alignés horizontalement -->
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <!-- Barre de recherche -->
                <TextBox
                    x:Name="textMotClefPlats"
                    Width="250"
                    Height="30"
                    Padding="5"
                    TextChanged="Refresh_Plats"/>
                    
                <!-- Bouton Ajouter Plat -->
                <Button
                    Width="150"
                    Height="40"
                    Margin="5,0,10,0"
                    Style="{StaticResource PrimaryButton}"
                    Click="ButAjouterPlat"
                    Content="+ Ajouter plat"
                    FontWeight="Bold"
                    Foreground="White" />
                <Button Content="Modifier Plat" Style="{StaticResource PrimaryButton}" Width="150" Height="40" Margin="0,0,10,0"/>
                <!-- Bouton Supprimer Plat -->
                <Button Content="Supprimer Plat" Style="{StaticResource PrimaryButton}" Width="150" Height="40" Click="SupprimerPlats"/>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid
                    x:Name="dgPlats"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="False"
                    IsReadOnly="True"
                    ItemsSource="{Binding lesPlats}"
                    Background="#F4F4F4"
                    BorderBrush="#B0B0B0"
                    BorderThickness="1"
                    FontSize="14"
                    RowHeight="35"
                    AlternatingRowBackground="#E9E9E9"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto"
                    SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                            Width="*"
                            Binding="{Binding NomPlat}"
                            Header="Nom" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                            Width="*"
                            Binding="{Binding PrixUnitaire}"
                            Header="Prix" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                            Width="*"
                            Binding="{Binding DelaiPreparation}"
                            Header="Délai de préparation" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                            Width="*"
                            Binding="{Binding NbPersonnes}"
                            Header="Nb Personnes" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Plats.Categorie.Nomcategorie}"
                            Header="Catégorie" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Plats.SousCategorie.Nomsouscategorie}"
                            Header="Sous-catégorie" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Plats.Disponible.LibellePeriode}"
                            Header="Disponible" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
