<UserControl x:Class="SAE_SIBILIA.UserControls.DataGridGestionPlats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Style pour les en-têtes du DataGrid -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1E3A8A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <!-- Conteneur principal -->
        <StackPanel Margin="20">
            <!-- Titre -->
            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#0D1F3C"
                Text="Gestion des Plats" />

            <!-- Barre de recherche (à droite) -->
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBox
                    x:Name="textMotClefPlats"
                    Width="250"
                    Height="30"
                    Padding="5"
                    TextChanged="Refresh_Plats"/>
            </StackPanel>

            <!-- Bouton Ajouter Plat -->
            <Button
                Width="200"
                Height="40"
                Margin="0,0,0,20"
                HorizontalAlignment="Right"
                Background="#F59E0B"
                Click="ButAjouterPlat"
                Content="+ Ajouter plat"
                FontWeight="Bold"
                Foreground="White" />

            <!-- DataGrid -->
            <DataGrid
                x:Name="dgPlats"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding lesPlats}"
                Background="#F4F4F4"
                BorderBrush="#B0B0B0"
                BorderThickness="1"
                FontSize="14"
                RowHeight="35"
                AlternatingRowBackground="#E9E9E9"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NomPlat}"
                        Header="Nom" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrixUnitaire}"
                        Header="Prix" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding DelaiPreparation}"
                        Header="Délai de préparation" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NbPersonnes}"
                        Header="Nb Personnes" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Boutons (à droite) -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <!-- Bouton Modifier Plat -->
                <Button Content="Modifier Plat" Background="#1E3A8A" FontWeight="Bold" Foreground="White" Width="100" Height="30" Margin="0,0,10,0"/>
                <!-- Bouton Supprimer Plat -->
                <Button Content="Supprimer Plat" Background="#1E3A8A" FontWeight="Bold" Foreground="White" Width="100" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
