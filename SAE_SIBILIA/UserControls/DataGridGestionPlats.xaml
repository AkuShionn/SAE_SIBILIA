<UserControl x:Class="SAE_SIBILIA.UserControls.DataGridGestionPlats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Style pour les en-têtes -->
        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1E3A8A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="35"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Boutons -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Boutons en haut -->
        <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0">
            <TextBox x:Name="textMotClefPlats" Width="200" Height="30" Margin="0,0,10,0" Padding="5" TextChanged="Refresh_Plats"/>
            <Button Content="+ Ajouter Plat" Background="#F59E0B" Foreground="White" FontWeight="Bold"
                    Width="120" Height="30" Margin="0"/>
        </StackPanel>

        <!-- DataGrid stylisé -->
        <DataGrid x:Name="dgPlats"
                  Grid.Row="1"
                  ItemsSource="{Binding lesPlats}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="10"
                  Background="#F4F4F4"
                  BorderBrush="#B0B0B0"
                  BorderThickness="1"
                  FontSize="14"
                  RowHeight="35"
                  AlternatingRowBackground="#E9E9E9"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom" Binding="{Binding NomPlat}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                <DataGridTextColumn Header="Prix" Binding="{Binding PrixUnitaire}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                <DataGridTextColumn Header="Délai de préparation" Binding="{Binding DelaiPreparation}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
                <DataGridTextColumn Header="Nb Personnes" Binding="{Binding NbPersonnes}" Width="*" HeaderStyle="{StaticResource DataGridHeaderStyle}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
