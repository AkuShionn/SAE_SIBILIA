<UserControl
    x:Class="SAE_SIBILIA.UserControls.DataGridGestionPlats"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE_SIBILIA.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <!--  Conteneur principal  -->
        <StackPanel Margin="20">
            <!--  Titre  -->
            <TextBlock
                Margin="0,0,0,20"
                FontSize="24"
                FontWeight="Bold"
                Foreground="#0D1F3C"
                Text="Gestion des Plats" />

            <!--  Barre de recherche  -->
            <StackPanel
                Margin="0,0,0,20"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <TextBox
                    x:Name="searchBox"
                    Width="250"
                    Height="30"
                    Margin="0,0,10,0"
                    Padding="5" />
                <Button
                    Width="40"
                    Height="30"
                    Background="#1E3A8A"
                    BorderBrush="#1E3A8A"
                    BorderThickness="1"
                    Content="🔍"
                    Foreground="White" />
            </StackPanel>

            <!--  Bouton Ajouter Plat  -->
            <Button
                Width="200"
                Height="40"
                Margin="0,0,0,20"
                HorizontalAlignment="Right"
                Background="#F59E0B"
                Click="Button_Click_1"
                Content="+ Ajouter plat"
                FontWeight="Bold"
                Foreground="White" />

            <!--  DataGrid  -->
            <DataGrid
                x:Name="dgPlats"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding lesPlats}">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NomPlat}"
                        Header="Nom" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding PrixUnitaire}"
                        Header="Prix" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding DelaiPreparation}"
                        Header="Délai de préparation" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NbPersonnes}"
                        Header="Nb Personnes" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
