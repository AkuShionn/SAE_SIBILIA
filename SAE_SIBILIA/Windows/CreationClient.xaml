<Window x:Class="SAE_SIBILIA.Windows.CreationClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_SIBILIA.Windows"
        mc:Ignorable="d"
        Title="CreationClient" Height="400" Width="400">
    <StackPanel x:Name="spCreerClient">
        <Label x:Name="labTitreClient" Content="Création d'un client" Width="150" Margin="0,10,0,0" FontWeight="Bold" FontFamily="Verdana"/>
        <Label x:Name="labNomClient" Content="Nom :" Width="120" Margin="0,0,5,0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtBoxNomClient" TextWrapping="Wrap" Text="{Binding NomClient}" Width="120" VerticalAlignment="Center"/>
        <Label x:Name="labPrenomClient" Content="Prénom :" Width="120" Margin="0,5,5,0"/>
        <TextBox TextWrapping="Wrap" Text="{Binding PrenomClient}" Width="120" VerticalAlignment="Center"/>
        <Label Content="N° de téléphone :" Width="120" Margin="0,5,5,0"/>
        <TextBox TextWrapping="Wrap" Text="{Binding TelClient}" Width="120" VerticalAlignment="Center"/>
        <Label x:Name="labAdresse" Content="Adresse :" Width="120" Margin="0,5,5,0"/>
        <TextBox x:Name="txtBoxAdresseClient" TextWrapping="Wrap" Text="{Binding AdresseRue}" Width="120" VerticalAlignment="Center"/>
        <Label x:Name="labCP" Content="Code Postal :" Width="120" Margin="0,5,5,0"/>
        <TextBox x:Name="txtBoxCPClient" TextWrapping="Wrap" Text="{Binding AdresseCP}" Width="120" VerticalAlignment="Center"/>
        <Label x:Name="labVille" Content="Ville :" Width="120" Margin="0,5,5,0"/>
        <TextBox x:Name="txtBoxVille" TextWrapping="Wrap" Text="{Binding AdresseVille}" Width="120" VerticalAlignment="Center"/>
        <Button x:Name="buttValiderClient" Content="Valider" Margin="0,10,0,0" Width="75"/>

    </StackPanel>
</Window>
