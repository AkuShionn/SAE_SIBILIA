<Window x:Class="SAE_SIBILIA.Windows.CreationClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_SIBILIA.Windows"
        mc:Ignorable="d"
        Title="Création Client" Height="600" Width="400"
        Background="White" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10">
            <Ellipse Width="80" Height="80" Fill="#0D1F3C">
            </Ellipse>
            <TextBlock Text="Création d'un client" FontSize="20" FontWeight="Bold" Foreground="#0D1F3C" Margin="0,10,0,0" TextAlignment="Center"/>
            <TextBlock Text="Remplissez les informations ci-dessous" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>

        <!-- Formulaire -->
        <StackPanel Grid.Row="1" Margin="0,20,0,0">

            <!-- Nom -->
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="🧾" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxNomClient"  BorderThickness="0" Background="Transparent" Text="{Binding NomClient}"/>
                </DockPanel>
            </Border>

            <!-- Prénom -->
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="🧾" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxPrenomClient"  BorderThickness="0" Background="Transparent" Text="{Binding PrenomClient}"/>
                </DockPanel>
            </Border>

            <!-- Téléphone -->
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="📞" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxTelClient"  BorderThickness="0" Background="Transparent" Text="{Binding TelClient}"/>
                </DockPanel>
            </Border>

            <!-- Adresse -->
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="🏠" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxAdresseClient"  BorderThickness="0" Background="Transparent" Text="{Binding AdresseRue}"/>
                </DockPanel>
            </Border>

            <!-- Code Postal -->
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="🏷️" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxCPClient"  BorderThickness="0" Background="Transparent" Text="{Binding AdresseCP}"/>
                </DockPanel>
            </Border>

            <!-- Ville -->
            <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                <DockPanel>
                    <TextBlock Text="🌆" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtBoxVille"  BorderThickness="0" Background="Transparent" Text="{Binding AdresseVille}"/>
                </DockPanel>
            </Border>

            <!-- Bouton -->
            <Button x:Name="buttValiderClient" Content="Créer le client"
                    Background="#0D1F3C" Foreground="#D4A857" FontWeight="Bold"
                    Padding="10" Margin="0,20,0,0" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Version 2.4.1 © 2023 Sibilla Gestion" FontSize="10" Foreground="Gray" TextAlignment="Center"/>
            <TextBlock Text="Tous droits réservés" FontSize="10" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
