<Window x:Class="SAE_SIBILIA.Fenetres.ModificationCommande"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_SIBILIA.Fenetres"
        mc:Ignorable="d"
        Title="ModificationCommande"  Height="600" Width="400" Background="White" Foreground="Black" WindowStartupLocation="CenterScreen">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto" MinHeight="0"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,10,0,10" Width="254">
            <TextBlock Text="Nouvelle commande" FontSize="20" FontWeight="Bold" Foreground="#0D1F3C" TextAlignment="Center"/>
            <TextBlock Text="Remplissez les informations client et commande" FontSize="12" Foreground="Gray" TextAlignment="Center"/>
        </StackPanel>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,0,0,12">
            <StackPanel>

                <!-- Infos client -->
                <TextBlock Text="Nom du client" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <TextBox x:Name="txtNomClient" BorderThickness="0" Background="Transparent"/>
                </Border>

                <TextBlock Text="Numero client" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <TextBox x:Name="txtTelClient" BorderThickness="0" Background="Transparent"/>
                </Border>



                <!-- Plat -->
                <TextBlock Text="Plat" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <ComboBox x:Name="comboPlats" BorderThickness="0" Background="Transparent"/>
                </Border>

                <!-- Quantité -->
                <TextBlock Text="Quantité" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <TextBox x:Name="txtQuantite" BorderThickness="0" Background="Transparent"/>
                </Border>

                <!-- Date retrait -->
                <TextBlock Text="Date de retrait prévue" FontSize="12" Foreground="Gray"/>
                <Border BorderBrush="#D4A857" BorderThickness="1" CornerRadius="8" Padding="8" Margin="0,5">
                    <DatePicker x:Name="dateRetrait" BorderThickness="0" Background="Transparent"/>
                </Border>

                <!-- Ajouter plat -->
                <Button Content="Ajouter à la commande"
                Background="#D4A857" Foreground="White" FontWeight="Bold"
                Margin="0,10,0,0" Padding="8" BorderThickness="0" Cursor="Hand"/>

                <!-- Liste des plats ajoutés -->
                <TextBlock Text="Plats dans la commande :" FontSize="12" FontWeight="Bold" Margin="0,10,0,0"/>
                <ListBox x:Name="listPlatsCommandes" Height="100" />

                <!-- Total -->
                <TextBlock x:Name="txtTotal" Text="Total : 0 €" FontSize="14" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Right" Foreground="Black"/>

                <!-- Bouton de validation -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button x:Name="btnEnregistrer" Content="Enregistrer" Background="#D4A857" Foreground="White" FontWeight="Bold" Padding="10" Width="120" Cursor="Hand" Margin="0,0,10,0"/>
                    <Button Content="Annuler" Background="#0D1F3C" Foreground="#D4A857" FontWeight="Bold" Padding="10" Width="120" Cursor="Hand" />
                </StackPanel>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->

    </Grid>
</Window>
