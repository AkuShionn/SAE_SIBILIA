<Window x:Class="SAE_SIBILIA.Fenetres.ModificationPlats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_SIBILIA.Fenetres"
        mc:Ignorable="d"
        Title="Modifier un Plat" Height="800" Width="600"
        WindowStartupLocation="CenterScreen" Background="#F7F8FC">
    <Window.Resources>
        <Style x:Key="FormLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#4A5568"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="InputContainer" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#CBD5E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,8"/>
        </Style>

        <Style x:Key="FormComboBox" TargetType="ComboBox">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,0"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0D1F3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0,12"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="40,20">
        <StackPanel>
            <TextBlock Text="Modification du plat" FontSize="24" FontWeight="Bold" Foreground="#0D1F3C" TextAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Nom du plat" Style="{StaticResource FormLabel}"/>
            <Border Style="{StaticResource InputContainer}">
                <TextBox Text="{Binding NomPlat, Mode=TwoWay}" Style="{StaticResource FormTextBox}"/>
            </Border>

            <TextBlock Text="Catégorie" Style="{StaticResource FormLabel}"/>
            <Border Style="{StaticResource InputContainer}">
                <ComboBox x:Name="comboBox_Categorie" Text="{Binding NomCategorie}" Style="{StaticResource FormComboBox}"/>
            </Border>

            <Button x:Name="btnEnregistrerModifs" Content="Enregistrer les modifications" Style="{StaticResource PrimaryButton}" Click="BtnEnregistrerModifs_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>