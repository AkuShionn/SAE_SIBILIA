<Window x:Class="SAE_SIBILIA.Fenetres.Connexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SAE_SIBILIA.Fenetres"
        mc:Ignorable="d"
        Title="Connexion" Height="450" Width="304">
    <Grid Margin="0,0,0,4">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Vertical">
            <TextBlock Text="Sibilla Gestion" FontSize="18" FontWeight="Bold" Foreground="#0F2343" HorizontalAlignment="Center"/>
            <TextBlock Text="Accédez à votre espace sécurisé" FontSize="12" Foreground="Gray" HorizontalAlignment="Center" Margin="0,5"/>

            <!-- Champ Identifiant -->
            <TextBlock Text="Identifiant" Margin="0,20,0,5" FontWeight="SemiBold" HorizontalAlignment="Left"/>
            <Border Background="#FFF" Height="40" BorderBrush="#F2C66D" BorderThickness="1" CornerRadius="5" HorizontalAlignment="Stretch">
                <TextBox x:Name="usernameTextBox" Margin="10,0" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center" />
            </Border>

            <!-- Champ Mot de Passe -->
            <TextBlock Text="Mot de passe" Margin="0,15,0,5" FontWeight="SemiBold" HorizontalAlignment="Left"/>
            <Border Background="#FFF" Height="40" BorderBrush="#F2C66D" BorderThickness="1" CornerRadius="5" HorizontalAlignment="Stretch">
                <PasswordBox x:Name="passwordBox" Margin="10,0" BorderThickness="0" Background="Transparent" VerticalContentAlignment="Center"/>
            </Border>

            <!-- Le bouton "Se connecter" -->
            <Button x:Name="LoginButton" Content="Se connecter" Background="#0F2343" Foreground="White" Height="45" Margin="0,20,0,0" BorderThickness="0" FontSize="14" FontWeight="Bold" Cursor="Hand" Click="LoginButton_Click"/>
        </StackPanel>

        <StackPanel Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock Text="Version 2.4.1 © 2025 Sibilla Gestion" Foreground="Gray" FontSize="10" TextAlignment="Center"/>
            <TextBlock Text="Tous droits réservés" Foreground="Gray" FontSize="10" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

